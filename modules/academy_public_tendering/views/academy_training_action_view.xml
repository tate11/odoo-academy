<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <record id="view_academy_training_action_public_tendering_form" model="ir.ui.view">
            <field name="name">view.academy.training.action.public.tendering.form</field>
            <field name="model">academy.training.action</field>
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="academy_base.view_academy_training_action_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[last()]" position="after">
                    <page string="Public tendering" class="oe_page_public_tendering" accesskey="P">
                        <field name="public_tendering_process_ids" class="oe_field_public_tendering_ids"
                            placeholder="Choose related public tendering" />
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>

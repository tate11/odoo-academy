<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- VIEWS: "Levels"

            - Model·········: at.level
            - _rec_name·····: name
            - Domain········: []
            - Context·······: {}
            - Parent menu ··: academy_tests.menu_settings_top
            - View priority·: 16    Sequence····: 10
            - Action help···: There are not any record for name
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

        <!-- Tree view for "at.level" -->
        <record id="view_at_level_tree" model="ir.ui.view">
            <field name="name">view.at.level.tree</field>
            <field name="model">at.level</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="at_level_tree" create="1" delete="1" edit="1" >
                    <field name="name" class="oe_field_name" />
                </tree>
            </field>
        </record>

        <record id="view_at_level_tree_sequence" model="ir.ui.view">
            <field name="name">view.at.level.tree.sequence</field>
            <field name="model">at.level</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="17" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="at_level_tree" create="1" delete="1" edit="1" >
                    <field name="sequence" class="oe_field_sequence" widget="handle" />
                    <field name="name" class="oe_field_name" />
                </tree>
            </field>
        </record>

        <!-- Form view for "at.level" -->
        <record id="view_at_level_form" model="ir.ui.view">
            <field name="name">view.at.level.form</field>
            <field name="model">at.level</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="at_level_form" create="1" delete="1" edit="1">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_field_name"
                                    placeholder="Enter new name" />
                            </h1>
                        </div>
                        <group col="2">
                            <field name="description" class="oe_field_description"
                                placeholder="Enter new text for description" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view for "at.level" -->
        <record id="view_at_level_search" model="ir.ui.view">
            <field name="name">view.at.level.search</field>
            <field name="model">at.level</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="at_level_search">
                    <field name="name" />
                    <!-- ··· -->
                </search>
            </field>
        </record>

        <!-- Main window action for model.name -->
        <record id="action_levels_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Levels</field>
            <field name="res_model">at.level</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_at_level_search" />
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_at_level_tree_sequence')})]"/>
            <field name="views">[(False, 'form'), ('view_at_level_tree_sequence', 'tree')]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Any level has been defined yet
                </p>
                <p>
                    Levels are useful to establish the difficulty scale of
                    questions.
                </p>
            </field>
        </record>

        <!-- Main menu for model.name -->
        <record id="menu_levels" model="ir.ui.menu" >
            <field name="name">Levels</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_levels_act_window" />
            <field name="parent_id" ref="menu_test_settings_top" />
        </record>

    </data>
</openerp>
